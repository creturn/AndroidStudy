<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cm_pic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <Button
        android:id="@+id/cm_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="拍照" />

    <Button
        android:id="@+id/btn_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cm_pic"
        android:layout_alignBottom="@+id/cm_pic"
        android:layout_toRightOf="@+id/cm_pic"
        android:text="复古" />

    <Button
        android:id="@+id/pt_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:text="相册" />

    <Button
        android:id="@+id/btn_crop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pt_pic"
        android:layout_alignBottom="@+id/pt_pic"
        android:layout_toLeftOf="@+id/pt_pic"
        android:text="裁切" />

    <Button
        android:id="@+id/btn_upload"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pt_pic"
        android:layout_alignRight="@+id/imageView1"
        android:layout_marginRight="31dp"
        android:text="上传" />

    <TextView
        android:id="@+id/txt_upload_porgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_upload"
        android:layout_alignBottom="@+id/btn_upload"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_marginLeft="20dp"
        android:text="上传进度" />

</RelativeLayout>
